@model ZenithAssignment.Models.RolesModel
@{
    ViewBag.Title = "Edit a Role";
    string temp = ViewBag.name;
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Roles" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        @Html.Hidden("priorRole", temp)
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back", "Index")
</div>