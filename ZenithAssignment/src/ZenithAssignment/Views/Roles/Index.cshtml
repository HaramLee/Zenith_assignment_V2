@using Microsoft.AspNetCore.Identity.EntityFrameworkCore;
@model IEnumerable<ZenithAssignment.Models.ApplicationUser>
@inject UserManager<ApplicationUser> userManager
@{
    ViewBag.Title = "Roles";

}

<h2>@ViewBag.Title</h2>

<p>
    <a asp-controller="Roles" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Roles</th>
        <th>Users</th>
        <th>Options</th>
    </tr>

    @foreach (IdentityRole r in ViewBag.roleStuff)
    {
        <tr>
            <td>
                @r.Name
            </td>
            <td>
                @foreach (var item in Model)
                {
                    @if (await userManager.IsInRoleAsync(item, r.Name))
                    {
                        @item.UserName
                        <br/>
                    }

                }
            </td>
            <td>
              
                <a asp-action="AddUser" asp-route-id="@r.Name">Add user</a> |
                @Html.ActionLink("Remove User", "RemoveUser", new { id = r.Name }) |
                @Html.ActionLink("Edit", "Edit", new { id = r.Name }) |
                @Html.ActionLink("Delete", "Delete", new { id = r.Name })
            </td>
        </tr>
    }   
    

</table>
