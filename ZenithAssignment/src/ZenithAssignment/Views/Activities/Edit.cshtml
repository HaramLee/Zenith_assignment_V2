@model ZenithAssignment.Models.Activity

@{
    ViewBag.Title = "Edit an activity";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Activities" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            @Html.HiddenFor(m => m.ActivityId, Model.ActivityId);
            <label asp-for="ActivityDec" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActivityDec" class="form-control" />
                <span asp-validation-for="ActivityDec" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>